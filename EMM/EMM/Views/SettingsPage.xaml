            <TableView Intent="Settings" HasUnevenRows="False" RowHeight="60">
                <TableRoot>
                    <TableSection Title="Должность и квалификация">
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="10" MinimumHeightRequest="55">
                                <!--<Label Text="Должность" VerticalTextAlignment="Center" HorizontalOptions="FillAndExpand"/>-->
                                <Picker ItemsSource="{Binding Positions}" SelectedItem="{Binding Position}" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand"/>
                            </StackLayout>
                        </ViewCell>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="10">
                                <!--<Label Text="Квалификация" VerticalTextAlignment="Center"/>-->
                                <Picker ItemsSource="{Binding Qualifications}" SelectedItem="{Binding Qualification}" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand"/>
                            </StackLayout>
                        </ViewCell>
                    </TableSection>
                    <TableSection Title="Тарифная ставка">
                        <EntryCell Text="{Binding Rate}" Placeholder="Введите ставку" Keyboard="Numeric" HorizontalTextAlignment="Start" VerticalTextAlignment="Center"/>
                    </TableSection>
                    <TableSection>
                        <TextCell Text="Изменить пароль" Command="{Binding ChangePasswordCommand}"/>
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
